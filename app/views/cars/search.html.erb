<div class="container py-4">
  <h1 class="mb-4 text-center text-primary"><%= t('.title') %></h1>

  <%= render 'filters' %>

  <hr class="my-5">

  <%= turbo_frame_tag "car_results" do %>
    <h2 class="mb-5 text-center text-primary fw-bold">
      <%= t('.results.title') %>
      <small class="text-muted fw-normal d-block mt-1">
        <%= t('.results.count', count: @cars.count) %>
      </small>
    </h2>

    <% if @cars.any? %>
      <div class="row g-4">
        <% @cars.each do |car| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render car %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info text-center mt-4" role="alert">
        <i class="bi bi-exclamation-circle me-1"></i>
        <%= t('.results.no_car_found') %>.
      </div>
    <% end %>
  <% end %>
</div>