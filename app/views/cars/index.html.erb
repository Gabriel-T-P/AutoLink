<div class="container py-4">
  <h1 class="mb-5 text-center"><%= t('.title') %></h1>

  <% @car_models.each_with_index do |model, index| %>
    <% cars = model.cars %>
    <% next if cars.empty? %>

    <h2 class="mb-3 text-center text-primary"><%= "#{model.brand} #{model.name}" %></h2>

    <div id="carousel-model-<%= index %>" class="carousel slide carousel-fade mb-5 shadow-lg rounded-3" data-bs-ride="carousel" data-bs-interval="false">
      <div class="carousel-inner rounded-3">
        <% cars.each_slice(3).with_index do |group, group_index| %>
          <div class="carousel-item <%= 'active' if group_index == 0 %>">
            <div class="row gx-3 p-3 justify-content-around">
              <% group.each do |car| %>
                <div class="col-md-4 d-flex align-items-stretch">
                  <%= render partial: 'car', locals: { car: car } %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <% if cars.each_slice(3).to_a.size > 1 %>
        <div class="carousel-indicators">
          <% cars.each_slice(3).with_index do |_, indicator_index| %>
            <button type="button" data-bs-target="#carousel-model-<%= index %>" data-bs-slide-to="<%= indicator_index %>" class="<%= 'active' if indicator_index == 0 %>" aria-current="<%= 'true' if indicator_index == 0 %>" aria-label="Slide <%= indicator_index + 1 %>"></button>
          <% end %>
        </div>
      <% end %>

      <button class="carousel-control-prev" type="button" data-bs-target="#carousel-model-<%= index %>" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousel-model-<%= index %>" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Pr√≥ximo</span>
      </button>
    </div>
  <% end %>
</div>