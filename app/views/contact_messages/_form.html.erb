<%= form_with(model: contact_message, class: 'needs-validation', novalidate: true) do |f| %>

  <% if f.object.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= t('.error.title') %>!</h4>
      <p><%= t('.error.subtitle') %>:</p>
      <ul class="mb-0">
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('.placeholder.name'), required: true %>
    <div class="invalid-feedback">
      <%= t('.error.name') %>.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control', placeholder: '(XX) XXXXX-XXXX', required: true %>
    <div class="invalid-feedback">
      <%= t('.error.phone') %>.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :message, class: 'form-label' %>
    <%= f.text_area :message, class: 'form-control', rows: 5, placeholder: t('.placeholder.message'), required: true %>
    <div class="invalid-feedback">
      <%= t('.error.message') %>.
    </div>
  </div>

  <div class="mb-4">
    <%= f.label :seller_id, class: 'form-label' %>
    <%= f.collection_select :seller_id, sellers, :id, :name, { prompt: t('.placeholder.seller') }, { class: 'form-select', required: true } %>
    <div class="invalid-feedback">
      <%= t('.error.seller') %>.
    </div>
  </div>

  <div class="d-flex colum justify-content-around">
    <%= f.submit t('.save'), class: 'btn btn-primary btn-lg' %>
    <%= link_to t('.cancel'), root_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>